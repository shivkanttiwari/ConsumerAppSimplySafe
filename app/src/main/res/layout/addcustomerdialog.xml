<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    android:weightSum="1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:hint="Enter merchant mobile no here."

        android:id="@+id/edMerchantMobilenumber" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_addmerchant"
        android:layout_width="146dp"
        android:layout_height="50dp"


      android:layout_marginTop="10dp"
        android:text="@string/add_merchant"
       android:layout_gravity="center"


        android:padding="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
       />

    <TextView
        android:text="OR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:id="@+id/textView" />

    <TextView
        android:text="Do you have merchant Qr Code? Scan ."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/txtviewqrcode" />
</LinearLayout>
